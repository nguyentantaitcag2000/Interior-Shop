CREATE TABLE Rate(
	ID_Rate INT PRIMARY KEY AUTO_INCREMENT,
    Value_Rate INT NOT NULL
);
CREATE TABLE `Review_Rating`(
	Content_RR TEXT,
    ID_Product INT NOT NULL,
    ID_User INT NOT NULL,
    ID_Rate INT NOT NULL
    
);
ALTER TABLE Review_Rating ADD CONSTRAINT fk_sdccx FOREIGN KEY (ID_Product) REFERENCES Product(ID_Product) ON DELETE CASCADE;
ALTER TABLE Review_Rating ADD CONSTRAINT fk_sdsdw FOREIGN KEY (ID_User) REFERENCES Users(ID_User) ON DELETE CASCADE;
ALTER TABLE Review_Rating ADD CONSTRAINT fk_cxcxcvvcv FOREIGN KEY (ID_Rate) REFERENCES Rate(ID_Rate) ON DELETE CASCADE;

ALTER TABLE Review_Rating ADD `created_at` timestamp DEFAULT CURRENT_TIMESTAMP;

CREATE TABLE User_UStatus(
	ID_UStatus INT PRIMARY KEY AUTO_INCREMENT,
    Name_UStatus CHAR(50) NOT NULL
);

ALTER TABLE users ADD ID_UStatus INT DEFAULT 1;

ALTER TABLE users ADD CONSTRAINT fk_fdksj FOREIGN KEY(ID_UStatus) REFERENCES User_UStatus(ID_UStatus);